{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "..",
    "paths": {
      "*": ["node_modules/*", "electron/types/*"]
    }
  },
  "include": ["../electron/**/*"]
}